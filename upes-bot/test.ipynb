    "from playsound import playsound\n",
    "import os\n",
    "import uuid\n",
    "\n",
    "def speak(text):\n",
    "    filename = f\"temp_audio_{uuid.uuid4().hex[:8]}.mp3\"\n",
    "    tts = gTTS(text)\n",
    "    tts.save(filename)\n",
    "    playsound(filename)\n",
    "    os.remove(filename)\n",
    "\n",
    "\n"
